<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/checkLay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/white"
        android:padding="3dp" >

        <LinearLayout
            android:id="@+id/checkingLayout"
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/checkinLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
             >

                <TextView
                    android:id="@+id/chkinTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="CHECK - IN"
                    android:textColor="#838383"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/calIcon12"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/calendar"
                        android:gravity="top" />

                    <TextView
                        android:id="@+id/dateTxt_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/calIcon12"
                        android:gravity="top"
                        android:text="11"
                        android:textSize="50sp" />

                    <LinearLayout
                        android:id="@+id/lll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/dateTxt_in"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/monthTxt_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="MAY&apos;15"
                            android:textColor="#838383"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/dayTxt_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MON"
                            android:textColor="#838383"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/view21"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#DCDCDC" />

            <LinearLayout
                android:id="@+id/checkoutLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/chkoutTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="CHECK - OUT"
                    android:textColor="#838383"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/ll4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/calIcon1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/calendar"
                        android:gravity="top" />

                    <TextView
                        android:id="@+id/dateTxt_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/calIcon1"
                        android:gravity="top"
                        android:text="12"
                        android:textSize="50sp" />

                    <LinearLayout
                        android:id="@+id/layu1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/dateTxt_out"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/monthTxt_out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="MAY&apos;15"
                            android:textColor="#838383"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/dayTxt_out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TUE"
                            android:textColor="#838383"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
